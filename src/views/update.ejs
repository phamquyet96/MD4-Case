<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
<form action="/item/update/<%=data.id%>" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" value="<%= data.name %>" name="name">
    </div>
    <div class="form-group">
        <label>Price</label>
        <input type="number" value="<%= data.price %>" class="form-control" name="price">
    </div>
    <div class="form-group">
        <label>Producer</label>
        <input type="text" value="<%= data.producer %>" class="form-control" name="producer">
    </div>
    <div class="form-group">
        <label>Avatar</label>
        <input type="text" value="<%= data.avatar %>" class="form-control" name="avatar">
    </div>
    <button type="submit" class="btn btn-primary">Change</button>
</form>
</body>
</html>

